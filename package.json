{
	"name": "wrk",
	"version": "1.0.0",
	"description": "A minimal CLI for quickly opening projects in your IDE",
	"module": "src/index.ts",
	"type": "module",
	"bin": {
		"wrk": "./src/index.ts"
	},
	"scripts": {
		"build": "bun build --compile --outfile=wrk src/index.ts",
		"install-global": "bun run build && cp wrk /usr/local/bin/",
		"test": "bun test"
	},
	"keywords": [
		"cli",
		"workspace",
		"productivity",
		"ide"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"inquirer": "^9.2.12"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/inquirer": "^9.0.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
